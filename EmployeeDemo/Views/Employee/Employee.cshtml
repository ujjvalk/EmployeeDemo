
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<h2 style="text-align:center;">Employee</h2>

<div class="panel panel-default ">
    <div class="panel-heading">
        <h3 class="panel-title">Employee Form</h3>
    </div>
    <div class="panel-body" id="_Form">
        @Html.Partial("P_Form")
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Employee List</h3>
    </div>
    <div class="panel-body" id="_List">
        @Html.Partial("P_List")
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "aoColumnDefs": [{ "bSortable": false, 'aTargets': [6] }],
            "bDestroy": true
        });
        
        $('#birthdate').datepicker({
            changeMonth: true,
            changeYear: true,
            maxDate: "today",
            yearRange: "-100:+0",
            dateFormat: 'dd-mm-yy',
            defaultDate: new Date(1980, 00, 01)
        });
    });

    function OnReset() {
        $("#radMale").prop("checked", true);
        $('#example').dataTable({
            "aoColumnDefs": [{ "bSortable": false, 'aTargets': [6] }],
            "bDestroy": true
        });
    }

    function onBegine() {
        if (Validate_Email() == true) {
            if (Validate_Checkbox() == true) {
                return true;
            }
            else {
                return true;
            }
        }
        else {
            if (Validate_Checkbox() == true) {
                $('#checkBoxError').text("");
            }
            return false;
        }
    }
    
    function Validate_Email() {
        
        var email = $('#email').val();
        var emailReg = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        if (!emailReg.test(email)) {
            $('#emailError').text('Please enter valid email..!');
            return false;
        } else {
            $('#emailError').text('');
            return true;
        }
    }

    function Validate_Checkbox() {
        var chks = $('input[type=checkbox]');

        var hasChecked = false;
        for (var i = 0; i < chks.length; i++) {
            if (chks[i].checked) {
                hasChecked = true;
                break;
            }
        }
        if (hasChecked == false) {
            $('#checkBoxError').text("Please select at least one checkbox..!");
            return false;
        }
        else {
            $('#checkBoxError').text("");
            return true;
        }

    }

    function DeleteRecords(id, active) {
        var msg = "Delete";
        if (active == 'Y') {
            msg = "Delete";
        }
        swal(
               {
                   title: "Are you sure?",
                   text: "You will " + msg.toLowerCase() + " record after click on yes.",
                   type: "warning",
                   showCancelButton: true,
                   confirmButtonColor: "#DD6B55",
                   confirmButtonText: "Yes",
                   cancelButtonText: "No",
                   closeOnConfirm: false,
                   closeOnCancel: false
               },
               function (isConfirm) {
                   if (isConfirm) {
                       $.ajax({
                           type: 'Post',
                           url: '@Url.Action("Delete", "Employee")',
                           datatype: 'text',
                           data: { id: id },
                           success: function (i) {
                               document.getElementById('_List').innerHTML = i;
                               $('#example').dataTable({
                                   "aoColumnDefs": [{ "bSortable": false, 'aTargets': [6] }],
                                   "bDestroy": true
                               });
                           },
                           error: function (i) {
                               swal({
                                   title: "" + msg + "",
                                   text: "There is a error in record please contact administrator.",
                                   type: "error",
                                   timer: 2000
                               });
                           }

                       });
                       swal({
                           title: "" + msg + "",
                           text: "Your record has been " + msg.toLowerCase() + ".",
                           type: "success",
                           timer: 2000
                       });
                   }
                   else {
                       swal({
                           title: "Cancelled",
                           text: "Your record is safe.",
                           type: "error",
                           timer: 2000
                       });
                   }
               });
    }

    function edit() {
        $("#birthdate").datepicker({
             changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0",
            maxDate: "today",
            dateFormat: 'dd-mm-yy',
        });
    }
     
</script>